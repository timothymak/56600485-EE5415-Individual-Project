<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/about_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/FontSize.Medium"
            android:text="@string/about_title"
            />

        <TextView
            android:id="@+id/about_dialog_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_guide"
            />

        <ImageView
            android:id="@+id/about_dialog_rules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/rules"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/about_dialog_linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/about_dialog_levels"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_levels"
                    />

                <TextView
                    android:id="@+id/about_dialog_find_out_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_find_out_more"
                    />

                <TextView
                    android:id="@+id/about_dialog_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:textColor="@color/url_blue"
                    android:text="@string/about_url"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/about_dialog_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:gravity="right"
                android:padding="20dp"
                android:clickable="true"
                android:textColor="@color/design_default_color_primary"
                android:text="@string/about_ok"
                />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>